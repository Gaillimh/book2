/* miniprogram/pages/desk/desk.wxss */
.btns {
  display: flex;
  flex-direction: row;
  justify-content: space-between;

  background-color: #fff;
  padding: 16rpx;
  box-shadow: 0px 2px 7px 0px rgba(0, 0, 0, 0.2);
}

.view-container {
  display: flex;
}

.img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 32rpx;
}

.book-info {
  display: flex;
  flex-direction: column;
}

.book-info>text:nth-child(1) {
  font-weight: bolder;
  font-size: 44rpx;
}